{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SignatureProjectDB": "Server=(localdb)\\MSSQLLocalDB;Database=SignatureProject;Trusted_Connection=True;"
  },
  "CacheSettings": {
    "SlidingExpiration": "2"
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
