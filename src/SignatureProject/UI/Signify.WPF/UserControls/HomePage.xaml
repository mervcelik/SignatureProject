<UserControl x:Class="Signify.WPF.UserControls.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Signify.WPF.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  Background="#F5F3FF">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.SplitButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Row="0" materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20" Padding="5" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Welcome back Admin!" 
                   FontSize="15" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   Margin="0 5 0 0"/>

                        <TextBlock Text="You have learned 80% of your goal this week!" 
                   Foreground="SlateGray" 
                   FontSize="11" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Left" 
                   Margin="0 5 0 0" TextWrapping="Wrap"/>

                        <TextBlock Text="Keep it up and improve your results!" 
                   Foreground="SlateGray" 
                   FontSize="11" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Left" 
                   Margin="0 5 0 0" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Image RenderOptions.BitmapScalingMode="HighQuality" 
           Source="/Resources/logo.png" 
           Grid.Column="1"/>
                </Grid>

            </materialDesign:Card>

            <Grid Grid.Row="1" Margin="5"   >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Column="0" materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20" Padding="5" Margin="5">
                    son imzalar listelecek
                </materialDesign:Card>
                
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:Card Grid.Row="0"  materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20" Padding="5" Margin="5">

                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="1"  materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20" Padding="5" Margin="5">

                    </materialDesign:Card>
                </Grid>
        
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Row="0" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20">
                <Calendar />
            </materialDesign:Card>
            <materialDesign:Card Grid.Row="1" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2"  Background="White" UniformCornerRadius="20">
                <StackPanel Margin="10">
                    <TextBlock Text="Kampanya 1" FontWeight="Bold" FontSize="14" Margin="0 0 0 5"/>
                    <TextBlock Text="Kampanya açıklaması burada yer alacak." Margin="0 0 0 10"/>
                    <Button Content="Detaylar" Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Left"/>

                    <TextBlock Text="Duyuru 1" FontWeight="Bold" FontSize="14" Margin="0 20 0 5"/>
                    <TextBlock Text="Duyuru açıklaması burada yer alacak." Margin="0 0 0 10"/>
                    <Button Content="Detaylar" Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Left"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
